<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="498.0" prefWidth="1059.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="by.bsuir.client.controllers.MainScreenController">
   <children>
      <HBox prefHeight="26.0" prefWidth="786.0">
         <children>
            <Button fx:id="btnAddSchedule" mnemonicParsing="false" onAction="#onAddScheduleBtnClick" prefHeight="26.0" prefWidth="126.0" style="-fx-background-color: green;" text="Добавить запись" textFill="WHITE" />
            <Button fx:id="btnAddCar" mnemonicParsing="false" onAction="#onCarBtnClick" prefHeight="26.0" prefWidth="126.0" text="Машины" />
            <Button fx:id="btnAddClient" mnemonicParsing="false" onAction="#onClientBtnClick" prefHeight="26.0" prefWidth="126.0" text="Клиенты" />
            <Button fx:id="btnViewAllSchedules" mnemonicParsing="false" onAction="#onViewAllSchedulesBtnClick" prefHeight="26.0" prefWidth="126.0" text="Записи" />
            <DatePicker fx:id="dtCurrentDate" editable="false" onAction="#OnDtClick" prefHeight="26.0" prefWidth="319.0" />
            <Button fx:id="btnLogout" mnemonicParsing="false" onAction="#onBtnLogoutClick" prefHeight="26.0" prefWidth="74.0" text="Выйти" />
            <MenuButton fx:id="adminMenu" mnemonicParsing="false" prefHeight="26.0" prefWidth="158.0" text="Администрирование">
              <items>
                <MenuItem fx:id="menuPart" mnemonicParsing="false" onAction="#onMenuPartClick" text="Запчасти" />
                <MenuItem fx:id="menuOperation" mnemonicParsing="false" onAction="#onMenuOperationClick" text="Работы" />
                  <MenuItem fx:id="menuCharts" mnemonicParsing="false" onAction="#onMenuChartsClicked" text="Графики" />
              </items>
            </MenuButton>
         </children>
      </HBox>
      <TableView fx:id="tvSchedule" prefHeight="480.0" prefWidth="982.0" VBox.vgrow="ALWAYS" />
   </children>
</VBox>
